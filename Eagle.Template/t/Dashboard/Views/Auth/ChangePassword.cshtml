@model ChangePasswordModel
@{
    ViewBag.Title = Strings.SignIn;
    Layout = Url.Content("~/Views/Auth/_Layout.cshtml");
}
@section styles{
    <link href="@Url.Content("~/Styles/App/Auth/signin.css")" rel="stylesheet" />
}
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <h4 class="title alert alert-info">@Strings.PleaseChangeYourPassword</h4>
        <form class="m-t" role="form" asp-action="ChangePassword" asp-controller="Auth" method="post">
            <div class="alert alert-danger invisible">
                <p class="text"></p>
            </div>
            <div class="form-group">
                <input asp-for="Username" class="form-control ltr-elm p-h-r" placeholder="@Html.DisplayNameFor(x => x.Username)" />
            </div>
            <small class="float-right">
                <span asp-validation-for="Username"></span>
            </small>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control ltr-elm p-h-r" placeholder="@Html.DisplayNameFor(x => x.Password)" />
            </div>
            <small class="float-right">
                <span asp-validation-for="Password"></span>
            </small>
            <div class="form-group">
                <input type="password" asp-for="NewPassword" class="form-control ltr-elm p-h-r" placeholder="@Html.DisplayNameFor(x => x.NewPassword)" />
            </div>
            <small class="float-right">
                <span asp-validation-for="NewPassword"></span>
            </small>
            <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" class="form-control ltr-elm p-h-r" placeholder="@Html.DisplayNameFor(x => x.ConfirmPassword)" />
            </div>
            <small class="float-right">
                <span asp-validation-for="ConfirmPassword"></span>
            </small>
            <div class="form-group">
                <custom-button type="button" text="@Strings.Submit" icon="zmdi zmdi-sign-in rotate-180 default-i" class="btn-dark full-width m-b btn-action btn-sign-in"></custom-button>
                <a asp-controller="Auth" asp-action="SignIn" class="d-block text-center"><small>@Strings.SignInToAccount</small></a>

            </div>
        </form>
        <p class="m-t">@Html.Raw(Strings.CopyRights)</p>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/App/Auth/signin.js")"></script>
}

